{
  "compileOnSave": false,
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "tmp", "lib"],
  "files": [],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./lib",
    "sourceRoot": "./src",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "types": ["jest", "node"],
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "."
  },
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
